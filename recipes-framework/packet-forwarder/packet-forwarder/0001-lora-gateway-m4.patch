+char copro_computeCRC(char *bb, int size)
+{
+	short sum = 0;
+
+	for (int i = 0; i < size - 1; i++)
+		sum += (bb[i] & 0xFF);
+
+	char res = (char) (sum & 0xFF);
+	res += (char) (sum >> 8);
+	return res;
